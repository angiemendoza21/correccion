Funcion  pregunta_2
	definir n,i, j como entero
	n = 5
	para i <- 1 hasta n
		para j <- 1 hasta i 
			escribir "*" Sin Saltar
		Finpara
		escribir ""
	fin para
fin funcion 
Funcion pregunta_3
	Definir a, b, x Como Entero
    a = 3
    b = 6
    x = a + a * (a + b) - b * a + (trunc(b/3) - 2 + a * (a mod 2))
	Escribir x
FinFuncion

Funcion pregunta_4 
	Definir n,m,r Como Entero
	n=15;m=25;r=1
	Mientras (r<>0) Hacer
		r=m mod n
		si(r=0) Entonces
			Escribir "m=",m,"n=",n
		SiNo
			n=m
			m=r
			Escribir "Esto vale N ;" n
			Escribir "Esto vale M ;" m
		FinSi
	FinMientras
FinFuncion

